{
  "name": "react-starterkit",
  "version": "4.0.0",
  "description": "React starterkit with Koa",
  "author": "Alberto Gasparin",
  "keywords": [
    "react",
    "koa",
    "starter kit",
    "redux",
    "router"
  ],
  "private": true,
  "config": {
    "testfiles": "find ./tests . -name unit*.js -not -path */node_modules/*",
    "mochaargs": "--compilers js:babel-register --require ./lib/webpack-compat --require ./tests/unit/setup",
    "startargs": "-r babel-register -r marko/node-require -r ./lib/webpack-compat"
  },
  "scripts": {
    "start": "node ./server_build/index.js",
    "start:nobuild": "node $npm_package_config_startargs ./server.js",
    "prebuild": "npm run clean -s",
    "build": "npm run build:assets -s -- --progress --hide-modules && npm run build:server -s",
    "build:server": "NODE_ENV=production webpack --config webpack.server.config.js --progress --hide-modules",
    "build:assets": "NODE_ENV=production webpack",
    "pretest": "npm run lint -s",
    "test": "npm run test:unit -s",
    "test:unit": "NODE_ENV=test mocha $($npm_package_config_testfiles | awk '!x[$0]++') $npm_package_config_mochaargs",
    "test:unit:watch": "npm run test:unit -s -- --watch --watch-extensions jsx,json --reporter min",
    "coverage": "nyc npm run test:unit -s -- --reporter dot",
    "lint": "eslint --ext .js,.jsx --ignore-path .gitignore --ignore-pattern \"public/**\" . && prettier --list-different \"{api,api-socket,app,lib,tests,www}/**/*.{js,scss}\" || (echo \"$(tput setaf 1)Prettier error: please format files above$(tput sgr0)\"; exit 1) && stylelint --syntax scss \"app/**/*.scss\"",
    "clean": "rm -rf ./public/assets && rm -rf ./coverage && rm -rf ./.nyc_output",
    "prewatch": "npm run clean -s",
    "watch": "supervisor -q -w lib,api,www,webpack.config.js -e js,marko -i __tests__ -- --inspect $npm_package_config_startargs ./server.js"
  },
  "nyc": {
    "require": [
      "babel-register",
      "./lib/webpack-compat"
    ],
    "exclude": [
      "node_modules",
      "webpack.config.js",
      "tests",
      "**/__tests__/**"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "cache": true,
    "sourceMap": false,
    "instrument": false
  },
  "dependencies": {
    "autoprefixer": "~7.2.3",
    "axios": "~0.17.1",
    "babel-core": "^6.25.0",
    "babel-loader": "~7.1.1",
    "babel-plugin-lodash": "~3.3.2",
    "babel-plugin-transform-react-constant-elements": "~6.23.0",
    "babel-plugin-transform-react-inline-elements": "~6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "~0.4.10",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.0",
    "babel-preset-stage-2": "^6.24.0",
    "babel-register": "^6.25.0",
    "chalk": "~2.3.0",
    "css-loader": "~0.28.7",
    "dotenv": "~4.0.0",
    "exports-loader": "~0.6.0",
    "extract-text-webpack-plugin": "~3.0.2",
    "file-loader": "~1.1.5",
    "http-errors": "~1.6.2",
    "image-webpack-loader": "~2.0.0",
    "imports-loader": "~0.7.0",
    "koa": "~2.4.1",
    "koa-bodyparser": "~4.2.0",
    "koa-compress": "~2.0.0",
    "koa-logger": "~3.1.0",
    "koa-onerror": "~4.0.0",
    "koa-router": "~7.3.0",
    "koa-session": "~5.5.1",
    "koa-static-cache": "~5.1.1",
    "lodash": "^4.1.0",
    "lodash-webpack-plugin": "~0.11.0",
    "marko": "~4.7.4",
    "marko-loader": "~1.3.2",
    "node-sass": "~4.7.2",
    "optimize-css-assets-webpack-plugin": "~3.2.0",
    "postcss-loader": "~2.0.9",
    "prettier": "~1.9.2",
    "prop-types": "^15.6.0",
    "react": "~16.2.0",
    "react-dom": "~16.2.0",
    "react-redux": "~5.0.6",
    "react-router": "~3.2.0",
    "redux": "~3.7.2",
    "redux-actions": "~2.2.1",
    "redux-thunk": "~2.2.0",
    "reselect": "~3.0.0",
    "sass-loader": "~6.0.6",
    "source-map-support": "~0.5.0",
    "style-loader": "~0.19.1",
    "svg-sprite-loader": "~3.5.2",
    "url-loader": "~0.6.2",
    "webpack": "~3.10.0"
  },
  "devDependencies": {
    "babel-eslint": "~8.0.3",
    "babel-plugin-istanbul": "~4.1.5",
    "babel-plugin-react-transform": "~3.0.0",
    "chai": "~4.1.2",
    "decache": "~4.3.0",
    "enzyme": "~3.2.0",
    "enzyme-adapter-react-16": "~1.1.0",
    "eslint": "~4.13.1",
    "eslint-import-resolver-webpack": "~0.8.3",
    "eslint-plugin-import": "~2.8.0",
    "eslint-plugin-mocha": "~4.11.0",
    "eslint-plugin-react": "~7.5.1",
    "mocha": "~4.0.1",
    "nyc": "~11.3.0",
    "react-test-renderer": "~16.2.0",
    "react-transform-hmr": "~1.0.0",
    "require-hacker": "~3.0.1",
    "stylelint": "~8.4.0",
    "supertest": "~3.0.0",
    "supervisor": "~0.12.0",
    "testdouble": "~3.2.6",
    "webpack-dev-middleware": "~2.0.1",
    "webpack-hot-middleware": "~2.21.0"
  },
  "engines": {
    "node": ">= 8.0.0"
  }
}
